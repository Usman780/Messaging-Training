
@{
    ViewBag.Title = "Divisions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using TrainingTracker.Models
<script type="text/javascript" src="~/Content/assets/js/plugins/notifications/bootbox.min.js"></script>
<script type="text/javascript" src="~/Content/assets/js/plugins/notifications/sweet_alert.min.js"></script>

<style>
    .dataTables_filter {
        display: none;
    }
</style>

<div class="content">
    <!-- Basic initialization -->
    <div class="panel panel-flat">
        <div class="panel-heading">
            <center><h3 class="panel-title"><b>Divisions</b></h3></center>
            <div class="heading-elements">
                <ul class="icons-list">
                    <li>
                        <a data-action="collapse"></a>
                    </li>
                    <li>
                        <a data-action="reload"></a>
                    </li>
                    <li>
                        <a data-action="close"></a>
                    </li>
                </ul>
            </div>
        </div>

        <div class="panel-body">
            <form class="form-inline" method="post" action="@Url.Action("UpdateDivisionAction","Utilities")">
                <div class="form-group col-lg-4">
                    <label class="control-label">Update Division</label>
                    <input required type="text" class="form-control" maxlength="49" name="Name" value="@ViewBag.division.Name" />
                    <input type="hidden" name="Id" value="@ViewBag.division.Id" />
                </div>

                <div class="form-group col-lg-3">
                    <label class="control-label"></label>
                    <input type="submit" value="Update" class="btn  btn-sm btn-success form-control" />
                </div>
            </form>
        </div>

        <table class="table datatable-button-html5-basic">
            <thead>
                <tr>
                    <th>Sr#</th>
                    <th>Department Name</th>

                    <th>Action</th>
                </tr>
            </thead>
            <tbody>

                @{
                    List<Division> list = ViewBag.divisions;
                    int i = 0;
                    foreach (Division item in list)
                    {

                        <tr>
                            <td>@i</td>
                            <td>
                                @item.Name
                            </td>


                            <td>
                                <a class="btn btn-sm  btn-success" href="@Url.Action("UpdateDivisions","Utilities",new { id = item.Id })">
                                    <i class="icon-pencil"></i>
                                </a>
                                <a class="btn  btn-sm btn-danger" href="@Url.Action("DeleteDivision","Utilities",new { id = item.Id })">
                                    <i class="icon-trash"></i>
                                </a>
                            </td>
                        </tr>
                        i++;
                    }
                }

            </tbody>
        </table>
    </div>





    <!-- /basic initialization -->
    <!-- Footer -->
    <div class="footer text-muted">
        <a href="#">Powered By </a>
        <a href="http://nodlays.com" target="_blank">Nodlays</a>
    </div>
    <!-- /footer -->
</div>
<div id="EditDepartment" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <form class="form-horizontal">
                <div class="modal-header bg-primary">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Assign tasks to multiple trainees</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Department</label>
                        <div class="col-lg-9">
                            <input type="text" class="form-control" name="" id="">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Division</label>
                        <div class="col-lg-9">
                            <select class="form-control">
                                <option disabled selected value="">Select task</option>
                                <option value="">abc</option>
                            </select>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-sm  btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-sm  btn-primary">Assign</button>
                </div>
            </form>
        </div>
    </div>
</div>
