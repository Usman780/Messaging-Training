
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Zuptu Task Management App</title>

    <!-- Global stylesheets -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,300,100,500,700,900" rel="stylesheet" type="text/css">
    <link href="~/Content/assets/css/icons/icomoon/styles.css" rel="stylesheet" type="text/css">
    <link href="~/Content/assets/css/bootstrap.css" rel="stylesheet" type="text/css">
    <link href="~/Content/assets/css/core.css" rel="stylesheet" type="text/css">
    <link href="~/Content/assets/css/components.css" rel="stylesheet" type="text/css">
    <link href="~/Content/assets/css/colors.css" rel="stylesheet" type="text/css">
    <link rel="icon" href="~/Content/Images/ig.png" type="image/x-icon" sizes="16x16">
    <!-- /global stylesheets -->
    <!-- Core JS files -->

    <script type="text/javascript" src="~/Content/assets/js/core/libraries/jquery.min.js"></script>
    <script type="text/javascript" src="~/Content/assets/js/core/libraries/bootstrap.min.js"></script>

    <!-- /core JS files -->
    <!-- Theme JS files -->
    <script type="text/javascript" src="~/Content/assets/js/plugins/forms/validation/validate.min.js"></script>
    <script type="text/javascript" src="~/Content/assets/js/plugins/forms/styling/uniform.min.js"></script>


    <script type="text/javascript" src="~/Content/assets/js/pages/login_validation.js"></script>

    <script type="text/javascript" src="~/Content/assets/js/plugins/ui/ripple.min.js"></script>
    <!-- /theme JS files -->
    <style>

        #joinbtn {
            background-color: #008940 !important;
            border-radius: 22px !important;
            color: white !important;
            height: 40px;
            width: 130px;
            padding-top: 7px;
            font-size: medium;
        }

            #joinbtn:hover {
                background-color: #ffffff !important;
                color: #008940 !important;
                border-radius: 22px !important;
            }

        .clr {
            color: #0150A1;
        }
    </style>
</head>

<body class="login-container">
    <!-- Main navbar -->
    <div class="navbar navbar-inverse bg-primary">
        <img style="height:40px;width:40px;margin-top:5px;margin-left:5%" src="~/Content/Images/navlogo.png" />
        <div class="navbar-collapse collapse" id="navbar-mobile">

        </div>
    </div>
    <!-- /main navbar -->
    <!-- Page container -->
    <div class="bg-white">
        <div class="breadcrumb-line">
            <a class="breadcrumb-elements-toggle"><i class="icon-menu-open"></i></a>
            <ul class="breadcrumb">
                <li><a href="@Url.Action("Index","Auth")"><i class="icon-home2 position-left"></i> Home</a></li>
                <li class="active">Contact Us</li>
            </ul>
        </div>
    </div>
    <div class="page-container">
        <!-- Page content -->
        <div class="page-content">
            <!-- Main content -->
            <div class="content-wrapper">
                <!-- Content area -->
                <div class="content">
                    <!-- Simple login form -->
                    <form action="@Url.Action("PostContact","Home")" method="post" enctype="multipart/form-data">
                        <div style="width:55%" class="panel panel-body center-block ">
                            <div class="text-center">
                                <h3 class="content-group"><b>Contact Us</b><small class="display-block"></small></h3>
                            </div>
                            <div class="form-group has-feedback has-feedback-left">
                                <input type="text" class="form-control" maxlength="49" placeholder="*Subject" id="Subject" name="Subject" required>

                            </div>
                            <div class="form-group has-feedback has-feedback-left">
                                <textarea class="form-control" rows="3" name="Message" id="Message" placeholder="*Message" maxlength="500"></textarea>
                            </div>
                            <div class="form-group has-feedback has-feedback-left">
                                <label class="col-lg-2 control-label" style="font-size:16px"><span class="text-danger">*</span>Priority:</label>

                                <div class="col-lg-10" style="margin-top:2px">
                                    <div class="col-lg-3"><input required type="radio" name="Priority" value="0" />&nbsp; Low</div>
                                    <div class="col-lg-3"><input required type="radio" name="Priority" value="1" />&nbsp; Moderate</div>
                                    <div class="col-lg-3"><input required type="radio" name="Priority" value="2" />&nbsp; Severe</div>
                                </div>
                            </div>
                            <br />
                            <br />
                            <div style="padding:20px" class="form-group ">
                                <div class="row">
                                    <div class="col-sm-12 col-md-6 text-left ">
                                        <input type="file" name="File" />

                                    </div>
                                    <div class="col-sm-12 col-md-6 text-right ">
                                        <a class="clr" href="@Url.Action("Index","Auth")"><b>Back to Dashboard</b></a>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <span style="color:red">@ViewBag.error</span>
                                <button type="submit" id="submit" class="btn  btn-sm bg-primary pull-right ">Submit <i class="icon-arrow-right14 position-right"></i></button>
                            </div>
                            <center id="message"><h3 style="color:cornflowerblue" class="text-capitalize">@ViewBag.message</h3></center>

                        </div>
                    </form>
                    @*<div>
                        <center>
                            <a id="joinbtn" href="@Url.Action("SignUp","Utilities")" class="smoothScroll btn btn-sm btn-default wow fadeInDown" data-wow-delay="2000">Join Now</a>
                        </center>
                            </div>*@
                    <!-- /simple login form -->
                    <!-- Footer -->
                    <div class="footer text-muted text-center">

                    </div>
                    <!-- /footer -->
                </div>
                <!-- /content area -->
            </div>
            <!-- /main content -->
        </div>
        <!-- /page content -->
    </div>
    <!-- /page container -->
    <script>
         // $("#message").fadeIn()
         // setTimeout(function () { $("#message").fadeOut() }, 3000);
    </script>
</body>

</html>


