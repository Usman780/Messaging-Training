    function validatePassword() {
        var Password = $("#password").val();
        var Password1 = $("#confirmpassword").val();

        if (Password != Password1) {
            $('#errorDisplay').show();
            $('#submit').attr('disabled', true)
        }
        else {
            $('#errorDisplay').hide();
            $('#submit').attr('disabled', false)
        }
    }
</script>

