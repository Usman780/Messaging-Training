
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Zuptu</title>
    <link rel="icon" href="~/Content/Images/ig.png" type="image/x-icon" sizes="16x16">
    <!-- Global stylesheets -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,300,100,500,700,900" rel="stylesheet" type="text/css">
    <link href="~/Content/assets/css/icons/icomoon/styles.css" rel="stylesheet" type="text/css">
    <link href="~/Content/assets/css/bootstrap.css" rel="stylesheet" type="text/css">
    <link href="~/Content/assets/css/core.css" rel="stylesheet" type="text/css">
    <link href="~/Content/assets/css/components.css" rel="stylesheet" type="text/css">
    <link href="~/Content/assets/css/colors.css" rel="stylesheet" type="text/css">
    <!-- /global stylesheets -->
    <!-- Core JS files -->

    <script type="text/javascript" src="~/Content/assets/js/core/libraries/jquery.min.js"></script>
    <script type="text/javascript" src="~/Content/assets/js/core/libraries/bootstrap.min.js"></script>

    <!-- /core JS files -->
    <!-- Theme JS files -->
    <script type="text/javascript" src="~/Content/assets/js/plugins/forms/validation/validate.min.js"></script>
    <script type="text/javascript" src="~/Content/assets/js/plugins/forms/styling/uniform.min.js"></script>


    <script type="text/javascript" src="~/Content/assets/js/pages/login_validation.js"></script>

    <script type="text/javascript" src="~/Content/assets/js/plugins/ui/ripple.min.js"></script>
    <!-- /theme JS files -->
    <style>

        #joinbtn {
            background-color: #008940 !important;
            border-radius: 22px !important;
            color: white !important;
            height: 40px;
            width: 130px;
            padding-top: 7px;
            font-size: medium;
        }

            #joinbtn:hover {
                background-color: #ffffff !important;
                color: #008940 !important;
                border-radius: 22px !important;
            }

        .clr {
            color: #0150A1;
        }
    </style>
</head>

<body class="login-container">
    <!-- Main navbar -->
    <div class="navbar navbar-inverse bg-primary-600">

        <div class="navbar-collapse collapse" id="navbar-mobile">

        </div>
    </div>
    <!-- /main navbar -->
    <!-- Page container -->
    <div class="page-container">
        <!-- Page content -->
        <div class="page-content">
            <!-- Main content -->
            <div class="content-wrapper">
                <!-- Content area -->
                <div class="content">
                    <center><h5 id="mssg" style="color: red;">@ViewBag.msg</h5></center>
                    <!-- Simple login form -->
                    <form action="@Url.Action("updatePassword","Auth")" method="post">
                        <input type="hidden" name="value" value="@ViewBag.val" />
                        <input type="hidden" name="time" value="@ViewBag.t" />
                        <input type="hidden" name="IsUser" value="@ViewBag.IsUser" />
                        <input type="hidden" id="UActive" name="IsUser" value="@ViewBag.Active" />
                        <input type="hidden" id="expire" name="Isexpire" value="@ViewBag.expire" />
                        @if (ViewBag.expire != "yes")
                        {



                            <div class="panel panel-body login-form">
                                <div class="text-center">
                                    <div class="icon-object border-slate-300 text-slate-300"><i class="icon-reading"></i></div>
                                    @if (ViewBag.IsUser == "")
                                    {
                                        <h5 class="content-group">Reset Your Password <small class="display-block"></small></h5>
                                    }
                                    else
                                    {
                                        <h5 class="content-group">Set Your Password <small class="display-block"></small></h5>
                                    }

                                </div>
                                <div class="form-group has-feedback has-feedback-left">
                                    <input id="password" type="password" class="form-control" pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[$!%*?@("@")/])[A-Za-z\d$!%*?@("@")/]{8,}$" placeholder="Password" onkeyup="validatePassword()" name="password" maxlength="150" required>
                                    <div class="form-control-feedback">
                                        <i class="icon-user text-muted"></i>
                                    </div>
                                    <span style="color:red">Minimum eight characters, at least one uppercase letter, one lowercase letter, one number and one special character($!%*?@("@")/)</span>

                                </div>
                                <div class="form-group has-feedback has-feedback-left">
                                    <input id="confirmpassword" type="password" class="form-control" placeholder="Confirm Password" onkeyup="validatePassword()" name="confirmpassword" maxlength="150" required>
                                    <div class="form-control-feedback">
                                        <i class="icon-user text-muted"></i>
                                    </div>
                                    <span id="errorDisplay" style="color:red;display:none;">Password not matched!</span>
                                </div>
                                <input type="hidden" name="id" value="@ViewBag.id" />
                                <input type="hidden" name="role" value="@ViewBag.role" />
                                <div class="form-group login-options">
                                    <div class="row">

                                        <div class="col-sm-12 text-left">
                                            <a class="text-danger">@ViewBag.errorMsg</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-sm  bg-primary-600 btn-block" id="submit">Submit <i class="icon-arrow-right14 position-right"></i></button>
                                </div>

                                <span><b> Powered By <a href="https://nodlays.com/" target="_blank">Nodlays</a></b></span>

                            </div>
                        }
                    </form>
                    <!-- /simple login form -->
                    @if (ViewBag.expire != "yes")
                    {
                        <center><h3><a id="loginbtn" href="@Url.Action("Login", "Auth")" class="smoothScroll btn btn-sm btn-default wow fadeInDown" data-wow-delay="2000">Login</a></h3></center>

                    }
                    else
                    {
                        <center><h3>Link has been Expired!</h3></center>
                        <center><h3><a id="loginbtn" href="@Url.Action("Login", "Auth")" class="smoothScroll btn btn-sm btn-success wow fadeInDown" data-wow-delay="2000">Login</a></h3></center>


                    }
                    <!-- Footer -->
                    <div class="footer text-muted text-center">

                    </div>
                    <!-- /footer -->
                </div>
                <!-- /content area -->
            </div>
            <!-- /main content -->
        </div>
        <!-- /page content -->
    </div>
    <!-- /page container -->
</body>
</html>
<script type="text/javascript">
    if($('#expire').val()=="yes")
    {
        window.alert("Link has been Expired!")
   
    }

    if ($('#UActive').val() == "Active") {
         //$("#mssg").text("You are already exists in the system");
        $("#mssg").text("This user already exists");
        $('#submit').attr('disabled', true);
    }

